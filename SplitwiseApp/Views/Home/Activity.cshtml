@model IEnumerable<SplitwiseApp.Models.notification>

@{
    ViewBag.Title = "Activity";
}

<h2>My Activities</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.loginuser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.friendemail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.abc as List<SplitwiseApp.Models.notification>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.loginuser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.friendemail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
        </tr>
    }

</table>
